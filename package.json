{
  "name": "rss-reader-vue",
  "description": "Simple RSS feed reader created using Vue.js 3",
  "author": "Laruxo (https://github.com/Laruxo)",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "build": "vue-tsc --build && vite build",
    "preview": "vite preview",
    "typecheck": "vue-tsc --build",
    "test": "vitest",
    "lint": "eslint ."
  },
  "dependencies": {
    "vue": "^3.5.21",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/vite": "^4.1.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.3.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.35.0",
    "eslint-plugin-vue": "^10.4.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6"
  },
  "lint-staged": {
    "*.{ts,vue,js}": "eslint --fix",
    "*.{ts,js,css,md,json,yml}": "prettier --write"
  },
  "engines": {
    "node": ">=24.x"
  }
}
